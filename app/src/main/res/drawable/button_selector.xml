<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_pressed_color"/> <!-- Color cuando se presiona -->
            <corners android:radius="20dp"/> <!-- Mantiene las esquinas redondeadas -->
        </shape>
    </item>

    <!-- Estado cuando el botón está inhabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_disabled_color"/> <!-- Color cuando está deshabilitado -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Estado normal (cuando el botón no está presionado) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_normal_color"/> <!-- Color normal del botón -->
            <corners android:radius="20dp"/>
        </shape>
    </item>
</selector>
